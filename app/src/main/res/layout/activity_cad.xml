<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/nome"
            style="@style/mGrayEditext"
            android:drawableLeft="@drawable/ic_name"
            android:textColor="@color/colorPrimary"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/email"
            app:layout_constraintTop_toBottomOf="@+id/editName"
            style="@style/mGrayEditext"
            android:drawableLeft="@drawable/ic_mail"
            android:textColor="@color/colorPrimary"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTelefone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/telefone"
            app:layout_constraintTop_toBottomOf="@+id/editEmail"
            style="@style/mGrayEditext"
            android:drawableLeft="@drawable/ic_phone"
            android:textColor="@color/colorPrimary"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/login"
            app:layout_constraintTop_toBottomOf="@+id/editTelefone" style="@style/mGrayEditext"
            android:drawableLeft="@drawable/ic_login"
            android:textColor="@color/colorPrimary"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassword"
            android:hint="@string/senha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editLogin" style="@style/mGrayEditext"
            android:drawableLeft="@drawable/ic_lock"
            android:textColor="@color/colorPrimary"/>

    <Button
            android:text="@string/cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSave"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.98"
            style="@style/mDefaultButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>