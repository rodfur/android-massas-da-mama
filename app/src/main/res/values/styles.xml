<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mGrayEditext" parent="@android:style/TextAppearance">
        <item name="android:textColor">#9C27B0</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:textColorHint">#9C27B0</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>
    <style name="mDefaultButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/round_btn_linear</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingRight">70dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="mWhiteEditext" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>

    <style name="mWhiteTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
    </style>
</resources>
